<p id="notice"><%= notice %></p>

<h1>Pelis</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Genero</th>
      <th>Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pelis.each do |peli| %>
      <tr>
        <td><%= peli.nombre %></td>
        <td><%= peli.genero %></td>
        <td><%= image_tag(peli.imagen_url, :width => 200) if peli.imagen.present? %></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Mostrar', peli %></button></td>
        <td><button type="button" class="btn btn-primary"><%= link_to 'Editar', edit_peli_path(peli) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Eliminar', peli, method: :delete, data: { confirm: '¿Estás seguro?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nueva Peli', new_peli_path %>
